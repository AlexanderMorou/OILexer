#include                     "Types.oilexer";
/* --------------------------------------- *\
|*              B.2.7: Classes             *|
\* --------------------------------------- */
/* *
 * Figured while I was at it, I would fix what
 * I see as 'issues' with the original language's 
 * definition, namely the fixed position of the
 * partial keyword.
 * */
ClassDeclaration                          ::=
	Attributes:Attributes;?
    (
        OTuple<"new", ("public" | "private" | "protected" Whitespace "and" Whitespace "internal" | "internal" Whitespace "and" Whitespace "protected"), ("sealed"| "abstract" | "static"), "partial"> |
        OTuple<"new", "protected", "internal", ("sealed"| "abstract" | "static"), "partial">
    ):Modifiers;
	"class" Whitespace Identifier:Name;
	ClassOrStructHeader<>
	'{'
		ClassMemberDeclaration:Members;*
	'}' ';'?                                ;
